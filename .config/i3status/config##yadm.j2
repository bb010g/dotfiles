general {
        colors = true
        interval = 5
}

{% from 'yadm.j2' import yadm -%}

{% macro interface(name) -%}
    {{ '_first_' if yadm.interface[name] is not defined else yadm.interface[name] }}
{%- endmacro -%}

{% for disk_path in yadm.disk_paths -%}
order += "disk {{ disk_path }}"
{% endfor -%}
order += "ipv6"
order += "wireless {{ interface('wireless') }}"
order += "ethernet {{ interface('ethernet') }}"
order += "cpu_temperature 1"
order += "load"
order += "battery {{ yadm.battery_n }}"
order += "volume master"
order += "tztime local"

{% for disk_path in yadm.disk_paths -%}
disk "{{ disk_path }}" {
        format = "%avail"
}
{%- endfor %}

wireless {{ interface('wireless') }} {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: no"
}
ethernet {{ interface('ethernet') }} {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: no"
}

cpu_temperature 1 {
        path = "{{ yadm.cpu_temp_path }}"
}

load {
        format = "%1min"
}

battery {{ yadm.battery_n }} {
        format = "%status %percentage %remaining"
}

volume master {
        format = "ðŸ”Š: %volume"
        format_muted = "ðŸ”ˆ: %volume"
        device = "pulse:0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
