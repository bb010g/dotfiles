#/usr/bin/env ion
pacmd load-module module-null-sink sink_name=mic-n-apps sink_properties=device.description="Mic-and-Apps"
pacmd load-module module-loopback source=alsa_input.pci-0000_00_1b.0.analog-stereo sink=mic-n-apps
pacmd load-module module-combine-sink sink_name=record-n-play slaves=alsa_output.pci-0000_00_1b.0.analog-stereo,mic-n-apps sink_properties=device.description="Record-and-Play"
